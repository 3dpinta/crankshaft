[Unit]
Description=Crankshaft startup services
DefaultDependencies=no
After=local-fs.target
ConditionPathExists=/opt/crankshaft/startup.sh

[Service]
ExecStartPre=/usr/bin/fbi -d /dev/fb0 --noverbose -a /opt/crankshaft/splash.png
ExecStart=/opt/crankshaft/startup.sh
StandardInput=tty
StandardOutput=tty

[Install]
WantedBy=sysinit.target
